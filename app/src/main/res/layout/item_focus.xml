<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ouyang.testtab.com.ouyang.qingque.QwanFragment">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        >

        <ImageView
            android:id="@+id/civ_header_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_author_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小妖手工"
            android:layout_toRightOf="@id/civ_header_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6小时前"
            android:layout_below="@id/tv_author_item"
            android:layout_toRightOf="@id/civ_header_item"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray_b9adb1"
            />
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@id/rl_header"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/img_item_focus"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_content_item"
        android:scaleType="centerCrop"
      />
    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_content_item"
        android:layout_height="200dp" />

</RelativeLayout>
